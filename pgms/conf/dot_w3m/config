# w3m config
# based on: https://wiki.archlinux.org/title/W3m

# disable cookies

use_cookie 0
show_cookie 0
accept_cookie 0
accept_bad_cookie 0

# disable cache

no_cache 1

# disable history

use_history 0
save_hist 0

# searching

wrap_search 1
ignorecase_search 1

# don't show images

display_image 0

# display link numbers

display_link_number 1

# show links if an image lacks an alt tag

ignore_null_img_alt 1
pseudo_inlines 1

# pretend to be Firefox

user_agent Mozilla/5.0 (Windows NO 10.0; rev:91.0) Gecko/20100101 Firefox91.0
no_referer 1
cross_origin_referer 0
accept_language en-US,en;q=0.5
accept_encoding gzip, deflate
accept_media text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8

# terminal colors

basic_color terminal
anchor_color green

# open page in the default browser on MacOSX

extbrowser open -g %s

